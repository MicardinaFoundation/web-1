@model CalculatorAPI.Data.Data
@{
    ViewData["Title"] = "Add new value";
}

<div class="text-start">
    <h1 class="display-4">Add contact</h1>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name Contact</label>
            <input type="text" name="NamsName" value="" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Group</label>
            <select class="form-select" title="Contact group type" id="floatingSelect" name="Name">
                @*                     <option value="1">One</option>*@
                @{
                    var a = Model;
                    List<string> newData = Model.Cathegory
                    .Select(p => p.Cathegories)
                    .Distinct()
                    .ToList();
                    if (Model.Cathegory.Count > 0)
                    {
                        if (Model.Cathegory.Count > 1)
                        {
                            foreach (var data in newData)
                            {
                                <option value="@data">@data</option>
                            }
                            // for(int i = 0; i < Model.ToArray().Length; i++)
                            // {
                            //     <option value="@newData[i]">@newData[i]</option>
                            // }
                        }
                        else
                        {
                            <option value="@newData[0]">@newData[0]</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Number</label>
            <input type="tel" name="Numb" value="" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" name="Description" value="" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
