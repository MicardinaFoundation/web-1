@model List<CalculatorAPI.Data.Variant>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-start">
    <h1 class="display-4">Welcome around!</h1>
    <p>Today fonded @Model.Count values<br /><br /><br /></p>
    <button class="btn btn-success" onclick="location.href = '/Home/Add'">Add</button>
    <br />
    <form method="post" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-auto">
            <select class="form-select" title="Contact group type" id="floatingSelect" name="name">
                <option value="All" selected>All Group</option>
                @*                     <option value="1">One</option>*@
                @{
                    List<string> newData = Model
                    .Select(p => p.Name)
                    .Distinct()
                    .ToList();
                    if(Model.Count > 0)
                    {
                        if(Model.Count > 1)
                        {
                            foreach (var data in newData)
                            {
                                <option value="@data">@data</option>
                            }
                            // for(int i = 0; i < Model.ToArray().Length; i++)
                            // {
                            //     <option value="@newData[i]">@newData[i]</option>
                            // }
                        }
                        else
                        {
                            <option value="@newData[0]">@newData[0]</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-auto">
            <input type="text" name="NamsName" value="" class="col-auto" title="Contact Name"/>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <div class="col-auto">
            <button class="btn btn-secondary">Reset filter</button>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Group</th>
                <th>Tel</th>
                <th>Description</th>
                <th>Date add</th>
                <th>Date upd</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var variant in Model)
            {
                <tr>
                    <td>@variant.Id</td>
                    <td>@(variant.NamsName)</td>
                    <td>@(!string.IsNullOrEmpty(variant.Name) ? variant.Name : "<NULL>")</td>
                    <td>@(!string.IsNullOrEmpty(variant.Numb.ToString()) ? variant.Numb : "<NULL>")</td>
                    <td>@(!string.IsNullOrEmpty(variant.Description) ? variant.Description : "<NULL>")</td>
                    <td>@(!string.IsNullOrEmpty(variant.CreatedAt.ToString()) ? variant.CreatedAt == DateTime.MinValue ? "NO ADD" : variant.CreatedAt : "<NULL>")</td>
                    <td>@(!string.IsNullOrEmpty(variant.UpdatedAt.ToString()) ? variant.UpdatedAt == DateTime.MinValue ? "NO UPDATE" : variant.UpdatedAt : "<NULL>")</td>
                    <td><a href="/home/edit/@variant.Id">edit</a> <a href="/home/delete/@variant.Id">delete</a></td>
                </tr>
            }
        </tbody>
</table>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
    <br />
    <br />
    <a class="btn btn-danger">Clear DB</a>
</div>
